---
import Btn from './Btn.astro'

const { name, img, repo, demo } = Astro.props
---

<div class='md:flex gap-6 mb-10'>
  <div class='w-2/3'>
    <img
      class='h-auto'
      src={img}
      alt=`Imagen del proyecto ${name}`
      loading='lazy'
    />
  </div>
  <div class='flex flex-col justify-center items-start gap-3 w-1/3'>
    <h3 class='text-lg md:text-2xl font-bold'>{name}</h3>
    <p class='md:text-lg'><slot /></p>
    <div class='flex gap-6 w-full'>
      <Btn href={repo} type='secondary'>Repositorio</Btn>
      <Btn href={demo} type='primary'>Demo</Btn>
    </div>
  </div>
</div>
